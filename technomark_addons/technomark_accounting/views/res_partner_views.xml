<?xml version="1.0" encoding="utf-8"?>
<odoo>
      <!-- Inherited Product Template view to add new fields for Delivery Information-->
        <record id="view_partner_form_vat_inherited" model="ir.ui.view">
            <field name="name">invoice.form.view.vat.inherited</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base_vat.view_partner_form"/>
            <field name="arch" type="xml">
              <xpath expr="//label[@for='vat']" position="attributes">
                <attribute name="string">VAT TIN</attribute>
              </xpath>
            </field>
        </record>
</odoo>
