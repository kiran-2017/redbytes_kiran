<?xml version="1.0" encoding="utf-8"?>
<odoo>
      <!-- Inherited sale view to add new fields for Delivery Information-->
        <record id="view_picking_form_inherited" model="ir.ui.view">
            <field name="name">stock.picking.form.inherited</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
              <xpath expr="//field[@name='origin']" position="after">
                <field name="picking_type_flag" invisible="1"/>
              </xpath>
              <button name="%(stock.action_report_delivery)d" position="replace">
                  <button name="do_print_picking" string="Print" states="done" type="object" groups="base.group_user"/>
              </button>
            </field>
        </record>
</odoo>
