<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <!-- Inherit external Layout Header -->
  <template id="external_layout_header_po_inherited">
      <div class="header">
          <div class="row">
              <div class="col-xs-3">
                  <img t-if="company.logo" t-att-src="'data:image/png;base64,%s' % company.logo" style="max-height: 45px;"/>
              </div>
              <div class="text-right col-xs-4 page_bar" style="margin-top:20px;">
                <strong><span>PURCHASE ORDER</span></strong>
              </div>
              <div class="col-xs-5 text-right" style="margin-top:20px;" t-field="company.rml_header1"/>
          </div>
          <div class="row zero_min_height">
              <div class="col-xs-12">
                  <div style="border-bottom: 1px solid black;"></div>
              </div>
          </div>
          <div class="row">
              <div class="col-xs-6" name="company_address">
                  <strong><span>BUYER:</span></strong>
                  <span t-field="company.partner_id"
                      t-field-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": true}'
                      />
                      VAT TIN: <span t-field="company.partner_id.company_id.vat"/><br/>
                      <span style="border-bottom: 1px solid black; display:inline-block;">CST TIN:</span> <span t-field="company.partner_id.company_id.cst"
                      style="border-bottom: 1px solid black; display:inline-block;"/><br/><br/><br/><br/>
              </div>

          </div>
      </div>
  </template>

<!-- Inherit external Layout -->
  <template id="external_layout">
      <!-- Multicompany -->
      <t t-if="not o and doc">
          <t t-set="o" t-value="doc"/>
      </t>
      <t t-if="o and 'company_id' in o">
          <t t-set="company" t-value="o.company_id"></t>
      </t>
      <t t-if="not o or not 'company_id' in o">
          <t t-set="company" t-value="res_company"></t>
      </t>
      <!-- Added new header here-->
      <t t-call="technomark_purchase.external_layout_header_po_inherited" />
      <t t-raw="0" />
      <t t-call="report.external_layout_footer" />
  </template>

<template id="report_purchaseorder_document_inherited">
    <t t-call="technomark_purchase.external_layout">
        <t t-set="o" t-value="o.with_context({'lang':o.partner_id.lang})"/>
        <div class="page">
            <div>
              <!-- Add css here -->
              <style>
                #bottom-stuff {
                padding: 0px 100px 200px 60px;
                <!-- margin-left:10px; -->
                position: relative;
              }

              #bottom{

                position: absolute; bottom: 0px;
}
              </style>
            </div>
            <div class="oe_structure"/>
            <div class="row">
                <div class="col-xs-6">
                  <br/>
                  <br/>
                  <br/>
                    <strong>CONSIGNEE:</strong>
                    <div t-if="o.dest_address_id">
                        <div t-field="o.dest_address_id"
                            t-options='{"widget": "contact", "fields": ["address", "name", "phone", "fax"], "no_marker": True, "phone_icons": True}'/>
                    </div>

                    <div t-if="not o.dest_address_id and o.picking_type_id and o.picking_type_id.warehouse_id">
                        <span t-field="o.picking_type_id.warehouse_id.name"/>
                        <div t-field="o.picking_type_id.warehouse_id.partner_id"
                            t-options='{"widget": "contact", "fields": ["address", "phone", "fax"], "no_marker": True, "phone_icons": True}'/>
                    </div>
                </div>
                <div class="col-xs-5 col-xs-offset-1">
                    <div t-field="o.partner_id"
                        t-options='{"widget": "contact", "fields": ["address", "name", "phone", "fax"], "no_marker": True, "phone_icons": True}'/>
                        <p t-if="o.partner_id.vat">VAT: <span t-field="o.partner_id.vat"/></p>
                </div>
            </div>

            <h2 t-if="o.state != 'draft'">Purchase Order Confirmation #<span t-field="o.name"/></h2>
            <h2 t-if="o.state == 'draft'">Request for Quotation #<span t-field="o.name"/></h2>

            <div class="row mt32 mb32">
                <div t-if="o.name" class="col-xs-3">
                    <strong>Our Order Reference:</strong>
                    <p t-field="o.name"/>
                </div>
                <div t-if="o.partner_ref" class="col-xs-3">
                    <strong>Your Order Reference</strong>
                    <p t-field="o.partner_ref"/>
                </div>
                <div t-if="o.date_order" class="col-xs-3">
                    <strong>Order Date:</strong>
                    <p t-if="o.date_order" t-esc="o.date_converted(o.date_order)"/>
                    <!-- <p t-field="o.date_order"/> -->
                </div>
            </div>

            <table class="table table-condensed">
                <thead>
                    <tr>
                        <th><strong>Sr.No</strong></th>
                        <th><strong>Description</strong></th>
                        <th><strong>Material</strong></th>
                        <!-- <th><strong>Taxes</strong></th> -->
                        <th class="text-center"><strong>Date Req.</strong></th>
                        <th class="text-center"><strong>Approx Weight(kg)</strong></th>
                        <th class="text-right"><strong>Qty</strong></th>
                        <th class="text-right"><strong>Rate</strong></th>
                        <th class="text-right"><strong>Per</strong></th>
                        <th class="text-right"><strong>Amount</strong></th>
                        <th><strong>Taxes</strong></th>
                    </tr>
                </thead>
                <tbody>
                    <tr t-foreach="o.order_line" t-as="line">
                        <td>
                            <span t-field="line.serial_no"/>
                        </td>
                        <td>
                            <span t-field="line.name"/>
                        </td>
                        <td>
                            <span t-field="line.material"/>
                        </td>
                        <!-- <td>
                            <span t-esc="', '.join(map(lambda x: x.name, line.taxes_id))"/>
                        </td> -->
                        <td class="text-center">
                            <span t-if="line.date_planned" t-esc="line.date_converted(line.date_planned)"/>
                            <!-- <span t-field="line.date_planned"/> -->
                        </td>
                        <td class="text-center">
                            <span t-if="line.approx_weight>0" t-field="line.approx_weight"/>
                        </td>
                        <td class="text-right">
                            <span t-field="line.product_qty"/>
                            <span t-field="line.product_uom.name" groups="product.group_uom"/>
                        </td>
                        <td class="text-right">
                            <span t-field="line.price_unit"/>
                        </td>
                        <td class="text-right">
                            <span t-field="line.product_uom.name"/>
                        </td>
                        <td class="text-right">
                            <span t-field="line.price_subtotal"
                                t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                        </td>
                        <td>
                            <span t-esc="', '.join(map(lambda x: x.name, line.taxes_id))"/>
                        </td>
                    </tr>
                </tbody>
            </table>

            <div class="row">
                <div class="col-xs-12">
                  <div class="col-xs-7">
                    <span t-if="o.notes"  style="margin-left:-20px;">Note:</span>
                    <p  style="margin-left:-20px;" t-field="o.notes"/>
                    <div class="oe_structure"/>
                    <br/><br/><br/>
                    <div  style="margin-left:-20px;">
                      <div class="oe_structure"/>
                      <table class="table-condensed">
                        <tr class="">
                            <td class="text-left" t-if="o.incoterm_id">
                              FREIGHT : <span t-if="o.incoterm_id" t-esc="o.incoterm_id.name"/><br/>
                            </td>
                            <!-- <td class="text-left" t-if="not o.incoterm_id">
                              FREIGHT : <span t-if="not o.incoterm_id">DOOR DELIVERY</span><br/>
                            </td> -->
                        </tr>
                        <tr class="">
                            <td class="text-left">
                                PAYMENT TERMS :  <span t-if="o.payment_term_id" t-esc="o.payment_term_id.name"/><br/>
                            </td>
                        </tr>
                        <tr class="">
                            <td class="text-left">
                                TAXES/DUTIES :   <span t-field="o.taxes_duties"/><br/>
                            </td>
                        </tr>
                      </table>
                    </div>
                  </div>

                  <div class="col-xs-5">
                    <!-- <br/><br/><br/> -->
                    <table class="table table-condensed">
                        <tr class="border-black">
                            <td><strong>Total Without Taxes</strong></td>
                            <td class="text-right">
                                <span t-field="o.amount_untaxed"
                                    t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                            </td>
                        </tr>
                        <tr>
                            <td>Taxes</td>
                            <td class="text-right">
                                <span t-field="o.amount_tax"
                                    t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                            </td>
                        </tr>
                        <tr class="border-black">
                            <td><strong>Total</strong></td>
                            <td class="text-right">
                                <span t-field="o.amount_total"
                                    t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                            </td>
                        </tr>
                        <tr class="border-black"><!-- style="font-size:75%;"-->
                            <td colspan="2">
                              <strong>Rupees</strong>
                              <span t-if="o.amount_total" t-esc="o.amount_in_words(o.amount_total)"/> <strong>Only</strong>
                            </td>
                            <!-- <td class="text-left">
                                <span t-if="o.amount_total" t-esc="o.amount_in_words(o.amount_total)"/> <strong>Only</strong>
                            </td> -->
                        </tr>
                    </table>
                </div>
            </div>
            <!-- <div class="col-xs-8 page_bar" style="margin-left:15px; margin-top:10px; border:1px thin black;">
              <strong>Rupees</strong>
              <span t-if="o.amount_total" t-esc="o.amount_in_words(o.amount_total)"/> <strong>Only</strong>
            </div> -->
            <div>
              <div style="margin-left:15px;"><!--margin-top:420px;-->
                <span>
                  <strong>For TECHNOMARK INDIA</strong>
                  <br/>
                  <br/>
                  <br/>
                  <strong>(PARTNER)</strong>
                </span>
              </div>
            <!-- <div class="col-xs-8 page_bar" style="margin-left:15px; margin-top:100px; display:block !important;">
              <span>
                <strong>For TECHNOMARK INDIA</strong>
                <br/>
                <br/>
                <br/>
                <strong>(PARTNER)</strong>
              </span>
            </div> -->
          </div>
        </div>
      </div>
    </t>
</template>

<template id="report_purchaseorder_inherited">
    <t t-call="report.html_container">
        <t t-foreach="docs" t-as="o">
            <t t-call="technomark_purchase.report_purchaseorder_document_inherited" t-lang="o.partner_id.lang"/>
        </t>
    </t>
</template>
</odoo>
